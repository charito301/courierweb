<Window x:Class="MMarinov.WebCrawler.UI.ViewStatistics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dg="http://schemas.microsoft.com/wpf/2008/toolkit"

    Title="ViewStatistics" Height="300" Width="300">
    <Grid>
        <dg:DataGrid Name="gdStats" Background="LightGray" RowBackground="LightYellow"
AlternatingRowBackground="LightBlue" AutoGenerateColumns="False" CanUserAddRows="False" 
                     CanUserDeleteRows="False" ItemsSource="{Binding}"/>

    </Grid>
</Window>
